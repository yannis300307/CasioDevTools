{
  "name": "casiodev",
  "displayName": "CasioDevTools",
  "description": "An extension adding useful tools for Casio calculators programming.",
  "version": "0.3.3",
  "repository": "https://github.com/yannis300307/CasioDevTools",
  "icon": "resources/extension_icon.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "casiodev.reloadfxsdkwebview",
        "title": "CasioDevTools: Reload the Fxsdk Webview"
      },
      {
        "command": "casiodev.reloadgiteapcwebview",
        "title": "CasioDevTools: Reload the GiteaPC Webview"
      },
      {
        "command": "casiodev.reloadtransfertemulwebview",
        "title": "CasioDevTools: Reload the transfer/emul Webview"
      },


      {
        "command": "casiodev.startemulator",
        "title": "CasioDevTools: Start Emulator"
      },
      {
        "command": "casiodev.compilecg",
        "title": "CasioDevTools: Compile the Add-in for graphic calculators"
      },
      {
        "command": "casiodev.compilefx",
        "title": "CasioDevTools: Compile the Add-in for monochrome calculators"
      },

      {
        "command": "casiodev.newproject",
        "title": "CasioDevTools: Create a new CDT project"
      },

      
      {
        "command": "casiodev.transfer",
        "title": "CasioDevTools: Transfer the add-in to the calculator with copy"
      },
      {
        "command": "casiodev.compiletransfer",
        "title": "CasioDevTools: Compile and transfer the add-in to the calculator with copy"
      },
      {
        "command": "casiodev.compiletransfereject",
        "title": "CasioDevTools: Compile and transfer the add-in to the calculator with copy and eject"
      },
      {
        "command": "casiodev.transfereject",
        "title": "CasioDevTools: Transfer the add-in to the calculator with copy and eject"
      },
      {
        "command": "casiodev.transferpush",
        "title": "CasioDevTools: Transfer the add-in to the calculator with Add_in Push"
      }

    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "casio-dev",
          "title": "CasioDevTools",
          "icon": "resources/view_icon.svg"
        }
      ]
    },
    "views": {
      "casio-dev": [
        {
          "type": "webview",
          "id": "casiodev.giteapc",
          "name": "GiteaPC Manage And Install"
        },
        {
          "type": "webview",
          "id": "casiodv.fxsdk",
          "name": "Fxsdk Compile And Manage Projects"
        },
        {
          "type": "webview",
          "id": "casiodev.emul_transfert",
          "name": "Emulator and transfert"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.48",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "eject-media": "^0.0.3",
    "systeminformation": "^5.21.17"
  }
}