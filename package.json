{
  "name": "casiodev",
  "displayName": "CasioDevTools",
  "description": "An extension adding useful tools for Casio calculators programming.",
  "version": "0.0.1",
  "repository": "https://github.com/yannis300307/CasioDevTools",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "casiodev.startemulator",
        "title": "Start Emulator"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "casio-dev",
          "title": "CasioDevTools",
          "icon": "resources/view_icon.svg"
        }
      ]
    },
    "views": {
      "casio-dev": [
        {
          "type": "webview",
          "id": "casiodev.giteapc",
          "name": "GiteaPC Manage And Install"
        },
        {
          "type": "webview",
          "id": "casiodv.fxsdk",
          "name": "Fxsdk Compile And Manage Projects"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.48",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  }
}
